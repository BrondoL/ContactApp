<div class="row mt-3">
    <div class="col-md-8">
        <h2>Daftar Contact</h2>

        <a href="/contact/add" class="btn btn-sm btn-primary mb-2">Tambah Data</a>

        <% if (msg.length != 0) { %>
        <div class="alert alert-success" role="alert">
            <%= msg %>
        </div>
        <% } %>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">No.</th>
                    <th scope="col">Nama</th>
                    <th scope="col">No HP</th>
                    <th scope="col">Aksi</th>
                </tr>
            </thead>
            <tbody>
                <% if (contacts.length === 0) { %>

                <tr>
                    <td colspan="4">
                        <div class="alert alert-danger fw-bold" role="alert">
                            Data contact masih kosong
                        </div>
                    </td>
                </tr>

                <% } else { %>

                <% contacts.forEach((data, i) => { %>
                <tr>
                    <th scope="row"><%= i+1 %>.</th>
                    <td><%= data.nama %> </td>
                    <td><%= data.noHP %> </td>
                    <td>
                        <a href="/contact/<%= data._id %> " class="btn btn-success badge rounded-pill"><i
                                class="bi bi-info-circle"></i>
                            detail</a>
                    </td>
                </tr>
                <% }) %>

                <% } %>

            </tbody>
        </table>
    </div>
</div>